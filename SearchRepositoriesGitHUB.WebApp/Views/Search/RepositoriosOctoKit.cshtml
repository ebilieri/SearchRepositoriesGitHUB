@model SearchRepositoriesGitHUB.WebApp.Models.SearchModel

@{
    ViewData["Title"] = "Repositorios OctoKit";
}

<div class="panel panel-success">
    <div class="panel-heading panel-head">
        Pesquisar repositórios
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("RepositoriosOctoKit", "Search", FormMethod.Get))
        {
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-lg-3">
                @Html.Editor("filtro", new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-lg-2">
                <input type="submit" value="Pesquisar" class="btn btn-success" />
            </div>
        </div>
        }
    </div>
</div>


<div class="panel panel-primary">
    <div class="panel-heading panel-head">
        <h2>Repositórios</h2>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Nome")
                    </th>
                    <th>
                        @Html.DisplayName("Descrição")
                    </th>
                    <th>
                        @Html.DisplayName("Linguagem")
                    </th>
                    <th>
                        @Html.DisplayName("Repositório")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DataOctoKit)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Language)
                    </td>
                    <td>
                        <a href="@item.HtmlUrl" target="_blank">@item.HtmlUrl</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>
