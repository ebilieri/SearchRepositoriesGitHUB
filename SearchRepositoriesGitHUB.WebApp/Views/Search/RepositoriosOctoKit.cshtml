<div class="row">
    <div class="col-lg-4">
        <ul class="pagination">
            <li class="page-item @(!Model.ShowFirst? "disabled":"")">
                @Html.ActionLink("Primeira", "RepositoriosOctoKit", "Search", new { currentpage = 1, filtro = Model.Filtro })
            </li>
            <li class="page-item @(!Model.ShowPrevious? "disabled":"")">
                @Html.ActionLink("Anterior", "RepositoriosOctoKit", "Search", new { currentpage = Model.CurrentPage - 1, filtro = Model.Filtro })
            </li>
            <li class="page-item  @(!Model.ShowNext? "disabled":"")">
                @Html.ActionLink("Próxima", "RepositoriosOctoKit", "Search", new { currentpage = Model.CurrentPage + 1, filtro = Model.Filtro })
            </li>
            <li class="page-item  @(!Model.ShowLast? "disabled":"")">
                @Html.ActionLink("Última", "RepositoriosOctoKit", "Search", new { currentpage = Model.TotalPages, filtro = Model.Filtro })
            </li>
        </ul>
    </div>
    <div class="col-lg-4 align-bottom">
        <br />
        <h4>Página @Model.CurrentPage de @Model.TotalPages</h4>
    </div>
</div>