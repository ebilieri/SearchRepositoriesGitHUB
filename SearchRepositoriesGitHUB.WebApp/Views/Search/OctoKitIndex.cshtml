@{
    ViewData["Title"] = "Index";
}

<div class="panel panel-success">
    <div class="panel-heading panel-head">
        Pesquisar Repositórios do GitHUB
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("OctoKitIndex", "Search", FormMethod.Post))
        {
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-4">
                    @Html.Editor("Texto", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-lg-2"></div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <br />
                    @Html.RadioButton("Linguagem", "C") <span> C#&nbsp;&nbsp; </span>
                    @Html.RadioButton("Linguagem","Java") <span> Java&nbsp;&nbsp; </span>
                    @Html.RadioButton("Linguagem","JavaScript") <span> JavaScript&nbsp;&nbsp; </span>
                    @Html.RadioButton("Linguagem","Python") <span> Python&nbsp;&nbsp; </span>
                    @Html.RadioButton("Linguagem","Go") <span> Go </span>
                </div>
                <div class="col-lg-2"></div>
            </div>
            <div class="row">
                <br />
                <div class="col-lg-4">
                    <input type="submit" value="Pesquisar" class="btn btn-success" />
                </div>
                <div class="col-lg-2">

                </div>
            </div>
        }
    </div>
</div>

